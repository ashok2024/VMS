                    url: '@Url.Action("FilterGetVisitorList", "Employee")',
                    data: '{userID:"' + userID + '", contactname:"' + contact + '", company: "' + company + '", fromdate: "' + fdate + '", todate:"' + tdate + '", inTime: "' + time + '" }',
                    contentType: "application/json; charset=utf-8",
