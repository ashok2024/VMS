    <script>
        $("#filter").click(function () {
            debugger;
            var userID = $('#UserId').val()
            var contact = $("#contact").val();
            var company = $("#Company").val();
            var fdate = $("#fromdate").val();
            var tdate = $("#todate").val();
            var time = $("#time").val();

                var table = $("#tblCustomers").DataTable();
