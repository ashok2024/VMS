<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Department List</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Department List</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <h4 class="card-title">Department List</h4>
                        <div class="card-tools">
                            <button type="button" class="btn btn-primary anchorDetail">Add Department</button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <!--        Here you can write extra buttons/actions for the toolbar              -->
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="tblCustomers" class="display" style="width:100%; border: 1px solid #aaaaaa;">
                                    <thead>
                                        <tr>
                                            <th>Name</th>
                                            <th>Company</th>
                                            <th>Branch</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>

                            </div>
                        </div>                        
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</section>
<!-- /.content -->
<!-- Page specific script -->
@section scripts
{
    <script type="text/javascript">
        var AddURL = $("#WebUIUrl").val() + '/Master/AddDepartment?userId=@ViewBag.UserId&userName=@ViewBag.UserName&Id=0';
        var EditURL = $("#WebUIUrl").val() + '/Master/AddDepartment?userId=@ViewBag.UserId&userName=@ViewBag.UserName';

    $(".anchorDetail").click(function () {
        return window.location.href = AddURL;
    });

        $(function () {
            $.ajax({
                type: "POST",
                url: "/Master/A_GetDepartmentList",
                data: '{}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: OnSuccess,
                failure: function (response) {
                    alert(response.d);
                    alert(response.d);
                },
                error: function (response) {
                    alert(response.d);
                }
            });
        });
        function OnSuccess(response) {
            debugger;
            $("#tblCustomers").DataTable(
                {
                    bLengthChange: true,
                    bFilter: true,
                    bSort: true,
                    bPaginate: true,
                    data: response,
                    columns: [{ 'data': 'Name' },
                    { 'data': 'CompanyName' },
                    { 'data': 'BranchName' }
                    ],
                    columnDefs: [{
                        "targets": 3,
                        "data": null,
                        "defaultContent": "<button class='btn btn-info fa fa-edit padding0' style='text-decoration-style:none' onclick='GetUsersDetails(this)'></button>"
                    }]
                });
        };
        $("#tblCustomers").dataTable({ searching: false, paging: false, info: false });

        function GetUsersDetails(ele) {
            var dataRow = $('#tblCustomers').DataTable().row($(ele).closest('tr')).data();
            var newURL = EditURL + "&Id=" + dataRow.Id;
            return window.location.href = newURL;
        }
    $(function () {
        $(".edit").click(function () {

            debugger;
            var $buttonClicked = $(this);
            var id = $buttonClicked.attr('data-id');
            if (id == undefined)
                id = 0;
            var options = { "backdrop": "static", keyboard: true };

            var newURL = EditURL + "&Id=" + id;

            return window.location.href = newURL;
        });
    });

    </script>
    <!-- jQuery -->
    <script src="../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../dist/js/adminlte.min.js"></script>
}





