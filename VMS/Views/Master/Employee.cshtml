@model VMS.Models.Employee.SessionModel
@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<VMS.Models.Employee.EmployeeModel> employees = ViewData["GetEmployeeList"] as List<VMS.Models.Employee.EmployeeModel>;
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.3/css/jquery.dataTables.min.css">
<script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.5.1.js"></script>
<!-- DataTables -->
@*<link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="../../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link rel="stylesheet" href="../../plugins/datatables-buttons/css/buttons.bootstrap4.min.css">*@

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Employee List</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Employee List</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <h4 class="card-title">Employee List</h4>
                        <div class="card-tools">
                            <button type="button" class="btn btn-primary anchorDetail">Add Employee</button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="toolbar">
                            <div class="row" style="margin-bottom:10px;">
                                <div class="col-md-2">
                                    @using (Html.BeginForm("EmpExportToExcel", "Master", FormMethod.Post))
                                    {
                                        <button class="btn btn-info" type="submit" style="float:left;">Export to Excel</button>
                                    }
                                </div>
                                <div class="col-md-2">
                                    @using (Html.BeginForm("EmpExportToPdf", "Master", FormMethod.Post))
                                    {
                                        <input type="hidden" name="GridHtml" />
                                        <button class="btn btn-info" id="btnpdf" type="submit" style="float:left;">Export to PDF</button>
                                    }
                                </div>
                                <div class="col-md-2">
                                    <a href="/Master/DownloadExcel/" class="btn btn-info"><img width="25" height="25" title="Download Excel format" alt="Download Excel" /></a>
                                </div>
                                @using (Html.BeginForm("Employee", "Master", FormMethod.Post, new { user = Model, enctype = "multipart/form-data" }))
                                {
                                    <div class="col-md-4">
                                        @Html.HiddenFor(m => m.UserId)
                                        @Html.HiddenFor(m => m.UserName)
                                        <input type="file" id="FileUpload" name="FileUpload" class="" />
                                        <input type="submit" value="Upload" id="btnSubmit" class="btn btn-primary" />
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="tblCustomers" class="display" style="width:100%; border: 1px solid #aaaaaa;">
                                    <thead>
                                        <tr style="vertical-align:bottom;">
                                            <th>Employee Code</th>
                                            <th>Name</th>
                                            <th>Phone</th>
                                            <th>Email Id</th>
                                            <th>Company</th>
                                            <th>Department</th>
                                            <th>Designation</th>
                                            <th>User Type</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- end content-->
                </div>
                <!--  end card  -->
            </div>
            <!-- end col-md-12 -->
        </div>
    </div>
</section>
<!-- /.content -->
<!-- Page specific script -->

@section scripts
{
    <script type="text/javascript">
        var AddURL = $("#WebUIUrl").val() + '/Master/AddEmployee?userId=@ViewBag.UserId&userName=@ViewBag.UserName&EmpId=0';
        var refreshURL = $("#WebUIUrl").val() + '/Master/Employee?userId=@ViewBag.UserId&userName=@ViewBag.UserName';

    $(".anchorDetail").click(function () {
        return window.location.href = AddURL;
    });

        $(function () {
            $.ajax({
                type: "POST",
                url: "/Master/A_GetEmployeeList",
                data: '{}',
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: OnSuccess,
                failure: function (response) {
                    alert(response.d);
                },
                error: function (response) {
                    alert(response.d);
                }
            });
        });
        function OnSuccess(response) {
            debugger;
            $("#tblCustomers").DataTable(
                {
                    bLengthChange: true,
                    bFilter: true,
                    bSort: true,
                    bPaginate: true,
                    data: response,

                    columns: [{ 'data': 'EmpCode' },
                        { 'data': 'Name' },
                        { 'data': 'Phone' },
                        { 'data': 'Email' },
                        { 'data': 'Company' },
                        { 'data': 'Department' },
                        { 'data': 'Designation' },
                        { 'data': 'UserType' },
                        ],
                    columnDefs: [{
                        "targets": 8,
                        "data": null,
                        "defaultContent": "<button class='btn btn-info fa fa-edit padding0' style='text-decoration-style:none' onclick='GetUsersDetails(this)'></button>"
                    }]
                });
        };
        $("#tblCustomers").dataTable({ searching: false, paging: false, info: false });

        function GetUsersDetails(ele) {
            var dataRow = $('#tblCustomers').DataTable().row($(ele).closest('tr')).data();
            var newURL = EditURL + "&Id=" + dataRow.Id;
            return window.location.href = newURL;
        }
    $(function () {
        $(".edit").click(function () {

            debugger;
            var $buttonClicked = $(this);
            var id = $buttonClicked.attr('data-id');
            if (id == undefined)
                id = 0;
            var options = { "backdrop": "static", keyboard: true };

            var newURL = EditURL + "&Id=" + id;

            return window.location.href = newURL;
        });
    });

    </script>
    <!-- jQuery -->
    <script src="../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../dist/js/adminlte.min.js"></script>
}
