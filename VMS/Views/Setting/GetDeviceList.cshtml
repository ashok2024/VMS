
@{
    ViewBag.Title = "GetDeviceList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<VMS.Models.Admin.DeviceModel> devices = ViewData["GetDeviceList"] as List<VMS.Models.Admin.DeviceModel>;
}


<!-- DataTables -->
<link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="../../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="../../plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
<!-- Main content -->

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Device Setting</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Device</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-primary card-header-icon">
                                <h4 class="card-title">Device List</h4>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool btn-sm btn-default anchorDetail">Add Device</button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="toolbar" style="margin-bottom:15px;">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label>Device</label>                                            
                                            @Html.DropDownList("DeviceId", ViewBag.DeviceList as SelectList, "Select Device", new { @class = "form-control" })                                            
                                        </div>
                                        <div class="col-md-2">
                                            <button class="btn btn-info open" type="button" style="margin-top:32px;float:right;">Door Open</button>
                                        </div>
                                        <div class="col-md-2">
                                            <button class="btn btn-info cls" type="button" style="margin-top:32px;">Door Close</button>
                                        </div>
                                    </div>
                                </div>
                                <table class="table table-bordered" id="datatables">
                                    <thead>
                                        <tr>
                                            <th>Device Name</th>
                                            <th>Device Serial No</th>
                                            <th>Device Account Id</th>
                                            <th>Device Location</th>
                                            <th>Device IP</th>
                                            <th>Device Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in devices)
                                        {
                                        <tr>
                                            <td>@item.DeviceName</td>
                                            <td>@item.DeviceSerialNo</td>
                                            <td>@item.DeviceAccountId</td>
                                            <td>@item.DeviceLocation</td>
                                            <td>@item.DeviceIPAddress</td>
                                            <td>@item.DeviceStatus</td>
                                            <td>
                                                <a href="javascript:void(0);" class="btn btn-primary edit" title="Edit" data-id="@item.DeviceId"><i class="fas fa-edit"></i></a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- end content-->
                        </div>
                        <!--  end card  -->
                    </div>
                    <!-- end col-md-12 -->
                </div>
            </div>
</section>
<!-- /.content -->
<!-- Page specific script -->

@section scripts
{
    <!-- jQuery -->
    <!--<script src="../plugins/jquery/jquery.min.js"></script>-->
    <!-- Bootstrap 4 -->
    <!--<script src="../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>-->
    <!-- AdminLTE App -->
    <!--<script src="../dist/js/adminlte.min.js"></script>-->
    <!-- AdminLTE for demo purposes -->
    <!--<script src="../dist/js/demo.js"></script>-->

    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>

    <script>

        var AddURL = $("#WebUIUrl").val() + '/Setting/AddDevice?userId=@ViewBag.UserId&userName=@ViewBag.UserName&DeviceId=0';
        var EditURL = $("#WebUIUrl").val() + '/Setting/AddDevice?userId=@ViewBag.UserId&userName=@ViewBag.UserName';

        $(function () {

            $(".anchorDetail").click(function () {
                return window.location.href = AddURL;
            });

            $(".edit").click(function () {

                debugger;
                var $buttonClicked = $(this);
                var id = $buttonClicked.attr('data-id');
                if (id == undefined)
                    id = 0;
                var options = { "backdrop": "static", keyboard: true };

                var newURL = EditURL + "&DeviceId=" + id;

                return window.location.href = newURL;
            });

            $(".open").click(function () {

                debugger;
                var DeviceId = $('#DeviceId').val();

                if (DeviceId == "") {
                    alert("Please select device");
                    return false;
                }

                $.ajax({
                    cache: false,
                    type: "GET",
                    url: '@Url.Action("OpenCloseDevice", "Setting")',
                    data: { DeviceId: DeviceId, type: "open" },
                    success: function (data) {
                        debugger;
                        if (data == true) {
                            alert("Door Open Successfully");
                        }
                    },
                    error: function (result) {
                        alert("Error");
                    }
                });
            });

            $(".cls").click(function () {

                debugger;

                var DeviceId = $('#DeviceId').val();

                if (DeviceId == "") {
                    alert("Please select device");
                    return false;
                }

                $.ajax({
                    cache: false,
                    type: "GET",
                    url: '@Url.Action("OpenCloseDevice", "Setting")',
                    data: { DeviceId: DeviceId, type: "close" },
                    success: function (data) {
                        debugger;
                        if (data == true) {
                            alert("Door Closed Successfully");
                        }
                    },
                    error: function (result) {
                        alert("Error");
                    }
                });
            });

        });

    </script>

}



