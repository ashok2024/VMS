
@{
    ViewBag.Title = "GetMailSetting";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<VMS.Models.Admin.MailSettingModel> mails = ViewData["GetMailList"] as List<VMS.Models.Admin.MailSettingModel>;
}


<!-- DataTables -->
<link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="../../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="../../plugins/datatables-buttons/css/buttons.bootstrap4.min.css">
<!-- Main content -->

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Mail Setting</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Mail Setting</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">

        @if (mails.Count() == 0)
        {
            <div class="row">
                <div class="col-3">
                    <div class="card-body">
                        <button type="button" class="btn btn-tool btn-sm btn-default anchorDetail">Add Mail Setting</button>
                    </div>
                </div>
            </div>
        }

        <div class="row">
            <div class="col-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-primary card-header-icon">
                                <h4 class="card-title">Mail Setting</h4>
                            </div>
                            <div class="card-body">
                                <div class="toolbar" style="margin-bottom:15px;">

                                </div>
                                <table class="table table-bordered" id="datatables">
                                    <thead>
                                        <tr>
                                            <th>Host</th>
                                            <th>Smtp From</th>
                                            <th>Port</th>
                                            <th>UserName</th>
                                            <th>Password</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in mails)
                                        {
                                            <tr>
                                                <td>@item.Host</td>
                                                <td>@item.smtpfrom</td>
                                                <td>@item.port</td>
                                                <td>@item.username</td>
                                                <td>@item.password</td>
                                                <td>
                                                    <a href="javascript:void(0);" class="btn btn-primary edit" title="Edit" data-id="@item.Id"><i class="fas fa-edit"></i></a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- end content-->
                        </div>
                        <!--  end card  -->
                    </div>
                    <!-- end col-md-12 -->
                </div>
            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
</section>
<!-- /.content -->
<!-- Page specific script -->

@section scripts
{
    <!-- jQuery -->
    <!--<script src="../plugins/jquery/jquery.min.js"></script>-->
    <!-- Bootstrap 4 -->
    <!--<script src="../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>-->
    <!-- AdminLTE App -->
    <!--<script src="../dist/js/adminlte.min.js"></script>-->
    <!-- AdminLTE for demo purposes -->
    <!--<script src="../dist/js/demo.js"></script>-->

    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>

    <script>

        var AddURL = $("#WebUIUrl").val() + '/Setting/AddMailSetting?userId=@ViewBag.UserId&userName=@ViewBag.UserName&Id=0';
        var EditURL = $("#WebUIUrl").val() + '/Setting/AddMailSetting?userId=@ViewBag.UserId&userName=@ViewBag.UserName';

        $(function () {           

            $(".anchorDetail").click(function () {
                return window.location.href = AddURL;
            });

            $(".edit").click(function () {

                debugger;
                var $buttonClicked = $(this);
                var id = $buttonClicked.attr('data-id');
                if (id == undefined)
                    id = 0;
                var options = { "backdrop": "static", keyboard: true };

                var newURL = EditURL + "&Id=" + id;

                return window.location.href = newURL;
            });
        });

    </script>

}

