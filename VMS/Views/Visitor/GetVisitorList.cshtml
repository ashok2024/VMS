<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Visitor List</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Visitor List</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary card-header-icon">
                        <h4 class="card-title">Visitor List</h4>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool btn-sm btn-default anchorDetail">Add Visitor</button>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="toolbar" style="margin-bottom:15px;">
                            <div class="row">
                                <div class="col-md-2">
                                    <label>Visitor Contact</label>
                                    <input type="text" class="form-control" id="contact" placeholder="Visitor Contact" maxlength="10">
                                </div>
                                <div class="col-md-2">
                                    <label>Visitor Company</label>
                                    <input type="text" class="form-control" id="Company" placeholder="Visitor Company" maxlength="50">
                                </div>
                                <div class="col-md-1">
                                    <label>Dept</label>
                                    <input type="text" class="form-control" id="Department" placeholder="Department" maxlength="50">
                                </div>
                                <div class="col-md-2">
                                    <label>From Date</label>
                                    <div class="input-group date" id="datefrom" data-target-input="nearest">
                                        <input type="text" id="fromdate" class="form-control datetimepicker-input" data-target="#datefrom" />
                                        <div class="input-group-append" data-target="#datefrom" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <label>To Date</label>
                                    <div class="input-group date" id="dateto" data-target-input="nearest">
                                        <input type="text" id="todate" class="form-control datetimepicker-input" data-target="#dateto" />
                                        <div class="input-group-append" data-target="#dateto" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2">
                                    <label>In Time</label>
                                    <div class="input-group date" id="timepicker" data-target-input="nearest">
                                        <input type="text" id="time" class="form-control datetimepicker-input" data-target="#timepicker" />
                                        <div class="input-group-append" data-target="#timepicker" data-toggle="datetimepicker">
                                            <div class="input-group-text"><i class="far fa-clock"></i></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-1">
                                    <button class="btn btn-info search" type="button" style="margin-top:32px;">Search</button>
                                </div>
                                <div class="col-md-2">
                                    @using (Html.BeginForm("ExportToExcel", "Visitor", FormMethod.Post))
                                    {
                                        <button class="btn btn-info" type="submit" style="margin-top:20px;float:left;">Export to Excel</button>
                                    }
                                </div>
                                <div class="col-md-3">
                                    @using (Html.BeginForm("ExportToPdf", "Visitor", FormMethod.Post))
                                    {
                                        <input type="hidden" name="GridHtml" />
                                        <button class="btn btn-info" id="btnpdf" type="submit" style="margin-top:20px;">Export to PDF</button>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <table id="tblCustomers" class="display" style="width:100%; border: 1px solid #aaaaaa;">
                                    <thead>
                                        <tr style="vertical-align:bottom;">
                                            <th>Visitor Id</th>
                                            <th>Visitor Name</th>
                                            <th>Visitor Company</th>
                                            <th>Visitor Contact</th>
                                            <th>Employee Name</th>
                                            <th>Department</th>
                                            <th>In Time</th>
                                            <th>Out Time</th>
                                            <th>From Date</th>
                                            <th>To Date</th>
                                            <th>Purpose</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody></tbody>
                                </table>
                            </div>
                        </div>
                        @*<table class="table table-bordered" id="datatables">
                                <thead>
                                    <tr>
                                        <th>Visitor Id</th>
                                        <th>Visitor Name</th>
                                        <th>Visitor Company</th>
                                        <th>Visitor Contact</th>
