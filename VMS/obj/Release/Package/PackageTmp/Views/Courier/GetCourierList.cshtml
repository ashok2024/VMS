
@{
    ViewBag.Title = "GetCourierList";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<VMS.Models.Visitor.CourierModel> couriers = ViewData["GetCourierList"] as List<VMS.Models.Visitor.CourierModel>;
}

<!-- DataTables -->
<link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="../../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="../../plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Delivery List</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Delivery List</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-primary card-header-icon">
                                <h4 class="card-title">Delivery List</h4>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool btn-sm btn-default anchorDetail">Add Delivery</button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="toolbar">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label>Delivery Number</label>
                                            <input type="text" class="form-control" id="Number" placeholder="Delivery Number" maxlength="10">
                                        </div>
                                        <div class="col-md-2">
                                            <label>Delivery Company</label>
                                            <input type="text" class="form-control" id="Company" placeholder="Delivery Company" maxlength="50">
                                        </div>
                                        <div class="col-md-2">
                                            <label>Employee</label>
                                            <input type="text" class="form-control" id="Employee" placeholder="Department" maxlength="50">
                                        </div>
                                        <div class="col-md-2">
                                            <label>From Date</label>
                                            <div class="input-group date" id="datefrom" data-target-input="nearest">
                                                <input type="text" id="fromdate" class="form-control datetimepicker-input" data-target="#datefrom" />
                                                <div class="input-group-append" data-target="#datefrom" data-toggle="datetimepicker">
                                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <label>To Date</label>
                                            <div class="input-group date" id="dateto" data-target-input="nearest">
                                                <input type="text" id="todate" class="form-control datetimepicker-input" data-target="#dateto" />
                                                <div class="input-group-append" data-target="#dateto" data-toggle="datetimepicker">
                                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <label>Time</label>
                                            <div class="input-group date" id="timepicker" data-target-input="nearest">
                                                <input type="text" id="time" class="form-control datetimepicker-input" data-target="#timepicker" />
                                                <div class="input-group-append" data-target="#timepicker" data-toggle="datetimepicker">
                                                    <div class="input-group-text"><i class="far fa-clock"></i></div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-1">
                                            <button class="btn btn-info search" type="button" style="margin:10px;">Search</button>
                                        </div>
                                    </div>
                                </div>
                                <table class="table table-bordered" id="datatables">
                                    <thead>
                                        <tr>
                                            <th>Delivery Number</th>
                                            <th>Delivery Company</th>
                                            <th>Delivery Person Name</th>
                                            <th>Employee Name</th>
                                            <th>Delivery Time</th>
                                            <th>Delivery Date</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in couriers)
                                        {
                                        <tr>
                                            <td>@item.CourierNo</td>
                                            <td>@item.CourierCompany</td>
                                            <td>@item.CourierPersonName</td>
                                            <td>@item.EmployeeName</td>
                                            <td>@item.Time</td>
                                            <td>@string.Format("{0:dd/MM/yyyy}", item.Date)</td>
                                            <td>
                                                <a href="javascript:void(0);" class="btn btn-primary edit" title="Edit" data-id="@item.Id"><i class="fas fa-edit"></i></a>
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- end content-->
                        </div>
                        <!--  end card  -->
                    </div>
                    <!-- end col-md-12 -->
                </div>
            </div>
</section>
<!-- /.content -->
<!-- Page specific script -->

@section scripts
{
    <!-- jQuery -->
    <script src="../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="../dist/js/demo.js"></script>

    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>

    <script>

        var AddURL = $("#WebUIUrl").val() + '/Courier/AddCourier?userId=@ViewBag.UserId&userName=@ViewBag.UserName&Id=0';
        var EditURL = $("#WebUIUrl").val() + '/Courier/AddCourier?userId=@ViewBag.UserId&userName=@ViewBag.UserName';

        $(function () {

            $('#datefrom').datetimepicker({
                format: 'L'
            });

            $('#dateto').datetimepicker({
                format: 'L'
            });

            $('#timepicker').datetimepicker({
                format: 'LT'
            })

            $(".anchorDetail").click(function () {
                return window.location.href = AddURL;
            });

            $(".edit").click(function () {

                debugger;
                var $buttonClicked = $(this);
                var id = $buttonClicked.attr('data-id');
                if (id == undefined)
                    id = 0;
                var options = { "backdrop": "static", keyboard: true };

                var newURL = EditURL + "&Id=" + id;

                return window.location.href = newURL;
            });

            // data filteration
            $(".search").click(function () {

                debugger;
                var number = $('#Number').val();
                var company = $('#Company').val();
                var employee = $('#Employee').val();
                var datefrom = $('#fromdate').val();
                var dateto = $('#todate').val();
                var time = $('#time').val();

                var Data = {
                    DeliveryNo: number,
                    DeliveryCompany: company,
                    EmployeeName: employee,
                    FromDate: datefrom,
                    ToDate: dateto,
                    Time: time,
                };

                $.ajax({
                    cache: false,
                    type: "GET",                    
                    url: '@Url.Action("GetCourierListSearch", "Courier")',                     
                    data: Data,
                    success: function (data) {
                        debugger;
                        $("#datatables").find("tr:not(:first)").remove();

                        for (var i = 0; i < data.length; i++) {

                            // from date
                            var fdateString = data[i].Date.substr(6);
                            var currentTime = new Date(parseInt(fdateString));
                            var month = currentTime.getMonth() + 1;
                            var day = currentTime.getDate();
                            var year = currentTime.getFullYear();
                            if (month.toString().length == 1)
                                month = "0" + month.toString();
                            if (day.toString().length == 1) {
                                day = "0" + currentTime.getDate();
                            }
                            var date = day + "/" + month + "/" + year;                            

                            $("#datatables").append("<tr><td>" + data[i].CourierNo + "</td><td>" + data[i].CourierCompany + "</td><td>" + data[i].CourierPersonName + "</td> <td>" + data[i].EmployeeName + "</td><td>" + data[i].Time + "</td><td>" + date + "</td><td class='text-right'><a href='javascript: void(0);' class='btn btn-primary edit' title='Edit' data-id=" + data[i].Id + "><i class='fas fa-edit'></i></a></td></tr>");
                        }
                        //$("#datatables").DataTable();
                    },
                    error: function (result) {
                        alert("Error");
                    }
                });
            });

        });

    </script>

}

