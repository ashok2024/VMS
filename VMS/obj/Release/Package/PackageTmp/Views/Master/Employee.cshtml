@model VMS.Models.Employee.SessionModel
@{
    ViewBag.Title = "Employee";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<VMS.Models.Employee.EmployeeModel> employees = ViewData["GetEmployeeList"] as List<VMS.Models.Employee.EmployeeModel>;
}


<!-- DataTables -->
<link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="../../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="../../plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Employee List</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Employee List</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header card-header-primary card-header-icon">
                                <h4 class="card-title">Employee List</h4>
                                <div class="card-tools">
                                    <button type="button" class="btn btn-tool btn-sm btn-default anchorDetail">Add Employee</button>
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="toolbar">
                                    <div class="row" style="margin-bottom:10px;">
                                        <div class="col-md-2">
                                            @using (Html.BeginForm("EmpExportToExcel", "Master", FormMethod.Post))
                                            {
                                                <button class="btn btn-info" type="submit" style="float:left;">Export to Excel</button>
                                            }
                                        </div>
                                        <div class="col-md-2">
                                            @using (Html.BeginForm("EmpExportToPdf", "Master", FormMethod.Post))
                                            {
                                                <input type="hidden" name="GridHtml" />
                                                <button class="btn btn-info" id="btnpdf" type="submit" style="float:left;">Export to PDF</button>
                                            }
                                        </div>
                                        <div class="col-md-2">
                                            <a href="/Master/DownloadExcel/" class="btn btn-info"><img width="25" height="25" title="Download Excel format" alt="Download Excel" /></a>
                                        </div>
                                        @using (Html.BeginForm("Employee", "Master", FormMethod.Post, new { user = Model, enctype = "multipart/form-data" }))
                                        {
                                            <div class="col-md-4">
                                                @Html.HiddenFor(m => m.UserId)
                                                @Html.HiddenFor(m => m.UserName)
                                                <input type="file" id="FileUpload" name="FileUpload" class="" />
                                                <input type="submit" value="Upload" id="btnSubmit" class="btn btn-primary" />
                                            </div>
                                        }
                                    </div>
                                </div>
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Employee Code</th>
                                            <th>Name</th>
                                            <th>Phone</th>
                                            <th>Email Id</th>
                                            <th>Company</th>
                                            <th>Department</th>
                                            <th>Designation</th>
                                            <th>User Type</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        @foreach (var item in employees)
                                        {
                                        <tr>
                                            <td>@item.EmpCode</td>
                                            <td>@item.Name</td>
                                            <td>@item.Phone</td>
                                            <td>@item.Email</td>
                                            <td>@item.Company</td>
                                            <td>@item.Department</td>
                                            <td>@item.Designation</td>
                                            <td>@item.UserType</td>
                                            <td><a href="@Url.Action("AddEmployee","Master",new { userId = ViewBag.UserId, userName = ViewBag.UserName,EmpId=item.UserId })" class="btn btn-info" title="Edit"><i class="fas fa-edit"></i></a></td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                            <!-- end content-->
                        </div>
                        <!--  end card  -->
                    </div>
                    <!-- end col-md-12 -->
                </div>
            </div>
</section>
<!-- /.content -->
<!-- Page specific script -->

@section scripts
{
    <!-- jQuery -->
    <script src="../plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="../dist/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="../dist/js/demo.js"></script>

    <script src="//code.jquery.com/jquery-1.11.3.min.js"></script>

    <script>

        var AddURL = $("#WebUIUrl").val() + '/Master/AddEmployee?userId=@ViewBag.UserId&userName=@ViewBag.UserName&EmpId=0';
        var refreshURL = $("#WebUIUrl").val() + '/Master/Employee?userId=@ViewBag.UserId&userName=@ViewBag.UserName';

        $(function () {

            $(".anchorDetail").click(function () {
                return window.location.href = AddURL;
            });

            var res = "@ViewBag.Result";

            if (res != '') {
                alert(res);

            }
        });

    </script>

}

